@{
    ViewBag.Title = "Site";
    Layout = "~/Views/Shared/_ClientConfigurationLayout.cshtml";
}

<script type="text/javascript">
    jQuery.noConflict(true);
</script>

@Styles.Render("~/Content/Kendo/css")
@Scripts.Render("~/bundles/Kendo")
@Scripts.Render("~/bundles/bootstrap")


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("SelectCustomer", "Home")">Client Selection</a></li>
                <li><a href="@Url.Action("WelcomeClient", "Client")">@ViewData["SelectedCustomer"]</a></li>
                <li class="active">Sites</li>
            </ol>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-9">
            <p class="pageCaption">
                Sites<span id="sitePopOver" class="glyphicon popOverStyle glyphicon-info-sign pageCaptionHelp" data-toggle="popover"></span>
            </p>
        </div>
        <div class="col-sm-3 text-right">
            <a class="btn btn-success btn-sm m-top-20 pull-right-xs-max" id="btnAddNewSite">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;New Site
            </a>
        </div>
    </div>
    @*-----------------------------------------------------------------------ROW------------------------------------------------------------------------------------*@
    <div class="row">
        <div class="col-sm-12">
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <input id="SiteNameCombo" class="form-control" type="text" />

            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <input id="TemplateNameCombo" type="text" class="form-control" />

            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <input id="DefaultPageNameCombo" type="text" class="form-control" />

            </div>
        </div>
    </div>
    @*-----------------------------------------------------------------------ROW------------------------------------------------------------------------------------*@
    <div class="row">
        <div class="col-sm-12">
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button id="btnSearchSite" class="btn btn-primary btn-sm clear-after" type="button">Search</button>
            <a class="btn btn-link btn-sm clear-form" href="#" id="siteClearFilters"><span><u>Clear Filters</u></span></a>
        </div>
    </div>
    @*-----------------------------------------------------------------------ROW------------------------------------------------------------------------------------*@
    <div class="row">
        <div class="col-md-12">
            <br />
        </div>
    </div>
    <div id="siteGridwithSortingButtons">

        <div id="sitecontainerDiv" class="box containerDivInLine">
        </div>
        <div id="GridContainer" class="ScrollTable">
            <div id="siteGrid" class="tableFixedWidth">
            </div>
        </div>
    </div>

</div>

<div id="dvLoadAllSites" data-request-url="@Url.Action("GetAllSiteDetails", "Site")"></div>
<div id="dvSiteNameComboLoad" data-request-url="@Url.Action("GetSiteNames", "Site")"></div>
<div id="dvTemplateNameComboLoad" data-request-url="@Url.Action("GetTemplateNames", "Site")"></d></div>
<div id="dvDefaultPageNameComboLoad" data-request-url="@Url.Action("GetDefaultPageNames", "Site")"></div>
<div id="dvEditSite" data-request-url="@Url.Action("EditSite", "Site")"></div>
<div id="dvDeleteSite" data-request-url="@Url.Action("DeleteSite", "Site")"></div>
<div id="dvSiteConfigurationURL" data-request-url="@Url.Action("SiteConfiguration", "Site")"></div>
<div id="dvSitePopOver" class="dispNone">
    Site page displays all the available sites for selected Client in RightProspectus system.
    <br/><br />
    Site is the root entity for vertical market specific associations and customizations, as well as Template specific associations and customizations. Every client must have at least one Site.
    <br /><br />
    Below are the functionalities provided in this page,
    <ul>
        <li>ADD New Site</li>
        <li>EDIT Existing Site</li>
        <li>SEARCH Site based on Site Name, Template Name, Default Page Name.</li>
   </ul>
    <br />
</div>

<script id="alertDeleteSite" type="text/x-kendo-template">
    <p class="message">Are you sure you want to delete this Site?</p>
    <button class="confirm k-button confirmButtonYesMultiple">Yes</button>
    <button class="cancel k-button confirmButtonSingleYesNo">No</button>
</script>
<script src="~/Scripts/HostedAdmin/SiteSettings.js"></script>


