@{
    ViewBag.Title = "BrowserVersion";
    Layout = "~/Views/Shared/_ClientConfigurationLayout.cshtml";
}

<script type="text/javascript">
    jQuery.noConflict(true);
</script>

@Styles.Render("~/Content/Kendo/css")
@Scripts.Render("~/bundles/Kendo")
@Scripts.Render("~/bundles/bootstrap")

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("SelectCustomer", "Home")">Client Selection</a></li>
                <li><a href="@Url.Action("WelcomeClient", "Client")">@ViewData["SelectedCustomer"]</a></li>
                <li class="active">Browser Version</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <p class="pageCaption">
                Browser Version<span id="BrowserVersionGridPopOver" class="glyphicon popOverStyle glyphicon-info-sign pageCaptionHelp" data-toggle="popover"></span>
            </p>
        </div>
        <div class="col-sm-3 text-right">
            <a class="btn btn-success btn-sm m-top-20 pull-right-xs-max" id="btnAddNewBrowserVersion">
                <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;New Browser Version
            </a>
        </div>
    </div>
    @*-----------------------------------------------------------------------ROW------------------------------------------------------------------------------------*@
    <div class="row">
        <div class="col-sm-12">
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <input id="comboBrowserName" class="form-control" type="text" />

            </div>
        </div>
        @*<div class="col-sm-4">
            <div class="form-group">
                <input id="txtBrowserVersion" type="text" class="form-control" placeholder="Version" onkeypress="return isNumber(event)" />

            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <input id="txtDownloadUrl" type="text" class="form-control" placeholder="Download URL" />

            </div>
        </div>*@
    </div>
    @*-----------------------------------------------------------------------ROW------------------------------------------------------------------------------------*@
    <div class="row">
        <div class="col-sm-12">
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button id="btnSearchBrowserVersion" class="btn btn-primary btn-sm clear-after" type="button">Search</button>
            <a class="btn btn-link btn-sm clear-form" href="#" id="BrowserVersionClearFilters"><span><u>Clear Filters</u></span></a>
        </div>
    </div>
    @*-----------------------------------------------------------------------ROW------------------------------------------------------------------------------------*@
    <div class="row">
        <div class="col-md-12">
            <br />
        </div>
    </div>
    <div id="BrowserVersionGridwithSortingButtons">

        <div id="BrowserVersioncontainerDiv" class="box containerDivInLine">
        </div>
        <div id="GridContainer" class="ScrollTable">
            <div id="BrowserVersionGrid" class="tableFixedWidth">
            </div>
        </div>
    </div>

</div>


<div id="dvLoadAllBrowserVersion" data-request-url="@Url.Action("GetAllBrowserVersionDetails", "BrowserVersion")"></div>
<div id="dvBrowserVersionNameComboLoad" data-request-url="@Url.Action("GetBrowserNames", "BrowserVersion")"></div>
<div id="dvDisableBrowserVersion" data-request-url="@Url.Action("DisableBrowserVersion", "BrowserVersion")"></div>
<div id="dvEditBrowserVersion" data-request-url="@Url.Action("EditBrowserVersion", "BrowserVersion")"></div>


<div id="dvBrowserVersionPopOver" class="dispNone">
    Browser Version page displays all the available Versions for selected Browser.
    <br />
    <br />
    Below are the functionalities provided in this page,
    <ul>
        <li>ADD New Browser Version</li>
        <li>EDIT Existing Browser Version</li>
        <li>SEARCH Browser Version based on Browser Name, Browser Version and Download URL</li>
        <li>DELETE Browser Version</li>
    </ul>
    <br />
</div>


<script id="alertDisableBrowserVersion" type="text/x-kendo-template">
    <p class="message">Are you sure you want to disable this Browser Version?</p>
    <button class="confirm k-button confirmButtonYesMultiple">Yes</button>
    <button class="cancel k-button confirmButtonSingleYesNo">No</button>
</script>

<script src="~/Scripts/HostedAdmin/BrowserVersionSettings.js"></script>

